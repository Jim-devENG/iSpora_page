{
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), payment=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://api.ipify.org https://ipapi.co; frame-ancestors 'none';"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/.env",
      "destination": "/404",
      "statusCode": 404
    },
    {
      "source": "/.git",
      "destination": "/404",
      "statusCode": 404
    },
    {
      "source": "/.htaccess",
      "destination": "/404",
      "statusCode": 404
    },
    {
      "source": "/.htpasswd",
      "destination": "/404",
      "statusCode": 404
    },
    {
      "source": "/(.*)\\.env$",
      "destination": "/404",
      "statusCode": 404
    },
    {
      "source": "/(.*)\\.git$",
      "destination": "/404",
      "statusCode": 404
    },
    {
      "source": "/(.*)\\.ini$",
      "destination": "/404",
      "statusCode": 404
    },
    {
      "source": "/(.*)\\.log$",
      "destination": "/404",
      "statusCode": 404
    },
    {
      "source": "/(.*)\\.sql$",
      "destination": "/404",
      "statusCode": 404
    },
    {
      "source": "/(.*)\\.bak$",
      "destination": "/404",
      "statusCode": 404
    },
    {
      "source": "/(.*)\\.backup$",
      "destination": "/404",
      "statusCode": 404
    }
  ]
}
